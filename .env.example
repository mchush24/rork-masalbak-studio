# Backend API Port
PORT=3000

# OpenAI API Key (for image generation and TTS)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_key_here

# Supabase Configuration (Backend)
# Get from: Supabase Dashboard → Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE=your_service_role_key_here
SUPABASE_BUCKET=masalbak

# Supabase Configuration (Frontend - Expo Public)
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Resend API (for email verification)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_key_here

# FAL.ai API (for Flux.1 image generation)
# Get from: https://fal.ai/dashboard/keys
FAL_API_KEY=your_fal_key_here

# JWT Secret (for authentication tokens)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_generated_jwt_secret_here

# Expo Public API URL (for mobile app)
# Local development: http://192.168.1.12:3000 (your computer's IP)
# Production (Railway): https://your-app.up.railway.app
EXPO_PUBLIC_API=https://your-app.up.railway.app
EXPO_PUBLIC_RORK_API_BASE_URL=https://your-app.up.railway.app

# Allowed Origins for CORS (comma-separated)
# Example: http://localhost:8081,exp://192.168.*,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:8081,exp://192.168.*
